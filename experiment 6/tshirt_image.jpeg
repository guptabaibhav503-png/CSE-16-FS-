body {
    background-color: lightblue;
    font-family: Arial, sans-serif;
}

h1 {

    color: darkblue;
    text-align: center;
}
.product-grid{
    display:grid;
    grid-template-column:
    repeat(auto-fit,minmax(250px,1fr));
    gap:20px;
    padding:20px;
    max-width:1200px;
    margin:auto;
}
.product-card{
    background:white;
    border:1px solid green;
    border-radius:10px;
    padding:19px;
    text-align:centre;
}
.product-card:hover{
 transform:scale(1.05);
 box-shadow:0 4px 12px grey;
}
.product-card img{
    width:100%;
    height:200px;
    object-fit:cover;
   border-radius:8px;
}
.product-card h3{
    margin:15px 0 10px;
    font-size:20px;
    color:brown;
}
.product-card p{
    font-size: 14px;
    color:blue;
}
.price{
    font-size: 18px;
    color:aquamarine;
}
p {
    color: black;
    font-size: 18px;
}

.btn {
    background-color: blue;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    margin-top: 10px;
    text-decoration: none;
    cursor: pointer;
}
.btn:hover{
    background: blanchedalmond;
}